<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walltestvek"
    tools:context=".activities.RegistryActivity">

    <TextView
        android:id="@+id/regText"
        android:layout_width="359dp"
        android:layout_height="309dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/cextrabold"
        android:gravity="center"
        android:text="ERSTELLE DEINE EIGENE REISE."
        android:textColor="@color/rcreme"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <EditText
        android:id="@+id/emailRegView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="32dp"
        android:background="#FFF6ED"
        android:fontFamily="@font/cmedium"
        android:hint="Nutzername"
        android:inputType="textPersonName"
        android:textColor="#2A4B42"
        android:textColorHint="#2A4B42"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@id/regText"
        app:layout_constraintStart_toStartOf="@id/regText"
        app:layout_constraintTop_toBottomOf="@+id/regText" />

    <EditText
        android:id="@+id/userRegView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#FFF6ED"
        android:fontFamily="@font/cmedium"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:textColor="#2A4B42"
        android:textColorHint="#2A4B42"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="@id/emailRegView"
        app:layout_constraintStart_toStartOf="@id/emailRegView"
        app:layout_constraintTop_toBottomOf="@id/emailRegView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="74dp"
        app:layout_constraintEnd_toEndOf="@id/emailRegView"
        app:layout_constraintStart_toStartOf="@id/userRegView"
        app:layout_constraintTop_toBottomOf="@id/emailRegView"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/passsRegView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#FFF6ED"
            android:fontFamily="@font/cmedium"
            android:hint="Passwort"
            android:inputType="textEmailAddress"
            android:textColor="#2A4B42"
            android:textColorHint="#2A4B42" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="REGISTRIEREN"
        android:textSize="16dp"
        android:textColor="@color/rcreme"
        android:fontFamily="@font/cextrabold"
        android:background="@color/rdarkgreen"
        app:layout_constraintEnd_toEndOf="@id/textInputLayoutPassword"
        app:layout_constraintStart_toStartOf="@id/textInputLayoutPassword"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutPassword" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Ich habe bereits einen Account."
        android:textColor="#c4c4c4"
        app:layout_constraintEnd_toEndOf="@id/button6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/button6" />


</androidx.constraintlayout.widget.ConstraintLayout>



