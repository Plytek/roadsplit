<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Horizontal_ScrollView">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="-87dp"
                    tools:layout_editor_absoluteY="353dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="315dp"
                        android:layout_height="140dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/roundreiseshape" />

                    <ImageView
                        android:id="@+id/locationImageView"
                        android:layout_width="117dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="68dp"
                        android:padding="16dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="@id/imageView2"
                        app:layout_constraintStart_toStartOf="@id/imageView2"
                        app:layout_constraintTop_toTopOf="@id/imageView2"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/uebersichtTextViewName"
                        android:layout_width="150dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="30dp"
                        android:paddingTop="5dp"
                        android:text="Bents Finnlandreise"
                        android:textColor="@color/rcreme"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:layout_constraintStart_toEndOf="@id/locationImageView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/uebersichtTextViewDatum"
                        android:layout_width="150dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="12dp"
                        android:padding="0dp"
                        android:paddingStart="0dp"
                        android:textSize="10dp"
                        android:text="28.07.23 - 05.08.23"
                        android:textColor="@color/rgrey"
                        android:textStyle="normal"
                        app:layout_constraintStart_toEndOf="@id/locationImageView"
                        app:layout_constraintTop_toBottomOf="@id/uebersichtTextViewName" />

                    <TextView
                        android:id="@+id/uebersichtTextViewAusgaben"
                        android:layout_width="150dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="12dp"
                        android:paddingTop="5dp"
                        android:text="Ausgaben: 746â‚¬"
                        android:textColor="@color/rlightgreen"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:layout_constraintStart_toEndOf="@id/locationImageView"
                        app:layout_constraintTop_toBottomOf="@id/uebersichtTextViewDatum" />

                    <TextView
                        android:id="@+id/uebersichtTextViewReisende"
                        android:layout_width="150dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="28dp"
                        android:padding="5dp"
                        android:paddingStart="0dp"
                        android:text="Reise-Teilnehmer:"
                        android:textColor="@color/rcreme"
                        android:textSize="10dp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toEndOf="@id/locationImageView"
                        app:layout_constraintTop_toBottomOf="@id/uebersichtTextViewDatum" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tony Stark"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Charles"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Lucy"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>